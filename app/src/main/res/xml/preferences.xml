<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="pref_key_city"
        android:title="City"
        android:summary="Enter the city name"
        android:inputType="text"
        android:defaultValue="Tunis,tn" />
    <ListPreference
        android:key="pref_key_background_style"
        android:title="Background Style"
        android:summary="Select the background style"
        android:defaultValue="gradient_bg"
        android:entryValues="@array/background_style_values"
        android:entries="@array/background_style_entries"
        />
    <ListPreference
        android:key="pref_key_temperature_unit"
        android:title="Temperature Unit"
        android:summary="Choose your preferred temperature unit"
        android:dialogTitle="Select Temperature Unit"
        android:entries="@array/temperature_units"
        android:entryValues="@array/temperature_unit_values"
        android:defaultValue="metric"/>

</PreferenceScreen>